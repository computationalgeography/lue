{
    "name": "eejit",
    "scheduler": {
        "kind": "slurm",
        "settings": {
            "partition": "allq",
            "sbatch_options": [
                # "--qos=priority"
            ],
            "srun_options": [
                "--kill-on-bad-exit"
                # The mpi switch is needed because support for mpich is
                # not built-in to slurm, it seems
                # "--mpi=pmi2"

                # Other options: `srun --mpi=list`
                # "--mpi=pmix_v3"
                # "--mpi=openmpi"

                # "--qos=priority"
            ]
        }
    },
    "nr_cluster_nodes": 96,
    "cluster_node": {
        "nr_packages": 2,
        "package": {
            "nr_numa_nodes": 4,
            "numa_node": {
                "nr_cores": 6,
                "core": {
                    "nr_threads": 2
                }
            }
        }
    }
}
